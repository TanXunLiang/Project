<!-- box_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#F2FFFFFF" />

    <!-- Stroke around the shape -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside the shape -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />

</shape>
